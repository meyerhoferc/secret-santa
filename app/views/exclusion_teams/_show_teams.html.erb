<% @exclusion_teams.each do |team| %>
<ul>
  <li><%= "#{team.name}" %>
    <%= link_to 'Edit', edit_group_exclusion_team_path(@group, team.id) %>
    <%= link_to 'Delete', group_exclusion_team_path(@group, team.id), method: :delete, data: { confirm: "Are you sure you want to delete the team #{team.name}?\nThis cannot be undone." } %>
  </li>
  <% team.users.each do |user| %>
    <li>
      <%= "#{user.full_name}" %>
      <%= link_to 'Remove', group_exclusion_team_user_exclusion_team_path(@group, team.id, user.id), method: :delete, data: { confirm: "Are you sure you want to remove #{user.full_name} from #{team.name}?\nThis cannot be undone." } %>
    </li>
  <% end %>
</ul>
<% end %>
