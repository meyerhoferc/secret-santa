<div class="form-container">
  <div class="form-title">
    <h1>Log In</h1>
  </div>
  <div class="form-fields-container">
    <%= form_tag sessions_path, class: 'form-fields-container' do %>
      <div class="form-field">
        <%= label_tag :username_email, 'Username or email' %>
        <%= text_field_tag :username_email, params[:username_email] %>
      </div>
      <div class="form-field">
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </div>
      <div class="form-submit">
        <%= submit_tag "Log In" %>
      </div>
    <% end %>

    <div class="mt2 mb2 form-field">
        <p>
          Don't have an account?
          <%= link_to "Sign up here", signup_path %>
        </p>
    </div>
  </div>
</div>
