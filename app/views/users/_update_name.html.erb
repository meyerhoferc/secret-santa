<%= form_for @user, namespace: 'name' do |f| %>
  <div>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>
  <div>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>
  <div>
    <%= f.label :password, 'Current Password' %>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.submit 'Update Name' %>
  </div>
<% end %>
