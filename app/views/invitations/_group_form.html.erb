<%= form_for :invitation, { url: group_invite_path(@group.id) } do |f| %>
  <div>
    <%= label_tag :username_email, 'Username or email' %>
    <%= text_field_tag :username_email, params[:username_email] %>
  </div>
  <div>
    <%= f.label :comment, "Message" %><br/>
    <%= f.text_field :comment %>
  </div>
  <div>
    <%= f.submit 'Submit' %>
  </div>
<% end %>
