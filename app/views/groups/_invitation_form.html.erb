<%= form_for :invitation, { url: group_invite_path(@group.id) } do |f| %>
  <p>
    <%= f.label :receiver_id, 'Email' %>
    <%= f.text_field :receiver_id %>
  </p>
  <p>
    <%= f.label :comment, "Message" %><br/>
    <%= f.text_field :comment %>
  </p>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>
